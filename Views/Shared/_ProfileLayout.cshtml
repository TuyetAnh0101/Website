@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - RESTUDYSTORE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f4f7f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background: white;
            border-radius: 12px;
            padding: 20px 15px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .sidebar h5 {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 16px;
            padding: 12px 14px;
            color: #333;
            border-radius: 8px;
            margin-bottom: 8px;
            transition: all 0.3s ease-in-out;
            font-weight: 500;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background: linear-gradient(90deg, #0d6efd, #1e8141);
            color: #fff;
            transform: translateX(4px);
        }

        .card-profile {
            background-color: white;
            padding: 30px;
            border-radius: 14px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.07);
        }

        footer {
            background: linear-gradient(90deg, #0f2e22, #14532d);
            color: white;
            padding: 50px 0;
        }

        footer h5, footer h3 {
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 1px;
        }

        footer a {
            color: white;
            margin: 6px 0;
            display: block;
            font-size: 15px;
            transition: all 0.3s;
        }

        footer a:hover {
            text-decoration: underline;
            color: #ffd700;
        }

        /* Modal overlay */
        .modal-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1050;
            justify-content: center;
            align-items: center;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal {
            background: white;
            padding: 25px 35px;
            border-radius: 10px;
            max-width: 420px;
            width: 90%;
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
            text-align: center;
        }

        .modal h3 {
            margin-bottom: 20px;
            color: #14532d;
            font-weight: bold;
            font-size: 20px;
        }

        .modal-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .btn-confirm, .btn-cancel {
            min-width: 110px;
            padding: 10px 16px;
            border-radius: 6px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-confirm {
            background: #1e8141;
            color: white;
        }

        .btn-confirm:hover {
            background: #0f5123;
        }

        .btn-cancel {
            background: #ced4da;
            color: #333;
        }

        .btn-cancel:hover {
            background: #999;
            color: white;
        }
    </style>
</head>
<body>

<div class="container py-4">
    <div class="row gy-4">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar">
            <h5 class="text-success"><i class="fa fa-user me-2"></i>Tài khoản</h5>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" ? "active" : "")" href="/Account/Profile"><i class="fa fa-id-badge"></i> Hồ sơ cá nhân</a>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")" href="/Order/MyOrders"><i class="fa fa-box"></i> Đơn hàng của tôi</a>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Rental" ? "active" : "")" href="/Rental/MyRentals"><i class="fa fa-book"></i> Quản lý thuê sách</a>
            <a class="@(ViewContext.RouteData.Values["action"]?.ToString() == "MyBookings" ? "active" : "")" href="/Tutor/MyBookings"><i class="fa fa-calendar-check"></i> Lịch đặt gia sư</a>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Reviews" ? "active" : "")" href="/Reviews/MyReviews"><i class="fa fa-star"></i> Đánh giá của tôi</a>
            <a href="#" id="logoutLink" class="text-danger mt-2"><i class="fa fa-sign-out-alt"></i> Đăng xuất</a>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card-profile">
                <div class="mb-4">
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left me-1"></i> Quay lại trang chủ
                    </a>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận đăng xuất -->
<div class="modal-overlay" id="logoutModal">
    <div class="modal">
        <h3>Bạn có chắc muốn đăng xuất?</h3>
        <div class="modal-buttons">
            <form method="post" action="@Url.Action("Logout", "Account")" style="margin:0;">
                <button type="submit" class="btn-confirm">Đăng xuất</button>
            </form>
            <button class="btn-cancel" id="cancelLogout">Hủy</button>
        </div>
    </div>
</div>

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <!-- Logo + Giới thiệu -->
            <div class="col-md-4 mb-4">
                <h3 class="text-warning">RESTUDY STORE</h3>
                <p>Website học tập đa dịch vụ hàng đầu, cung cấp giáo trình cũ, dụng cụ học tập và nhiều sản phẩm hỗ trợ học tập khác.</p>
                <p><i class="fas fa-map-marker-alt me-2"></i>806 Lê Quang Đạo, Trung Chánh, Hóc Môn, Hồ Chí Minh</p>
                <p><i class="fas fa-phone-alt me-2"></i>Hotline: 0354 902 144</p>
                <p><i class="fas fa-envelope me-2"></i>Email: anhngo01012005@gmail.com</p>
            </div>

            <!-- Liên kết nhanh -->
            <div class="col-md-3 mb-4">
                <h5 class="text-warning">Liên kết nhanh</h5>
                <a href="#">Trang chủ</a>
                <a href="#">Khuyến mãi</a>
                <a href="#">Chính sách</a>
                <a href="#">Bảo mật</a>
                <a href="#">Điều khoản</a>
            </div>

            <!-- Kết nối mạng xã hội -->
            <div class="col-md-5 mb-4">
                <h5 class="text-warning">Kết nối với chúng tôi</h5>
                <div class="d-flex gap-3 fs-4 mb-3">
                    <a href="#" class="text-white"><i class="fab fa-facebook-square"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-twitter-square"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-youtube"></i></a>
                </div>
                <form class="d-flex" onsubmit="event.preventDefault(); alert('Cảm ơn bạn đã đăng ký nhận tin!');">
                    <input type="email" class="form-control me-2" placeholder="Nhập email nhận tin" required>
                    <button type="submit" class="btn btn-warning">Đăng ký</button>
                </form>
            </div>
        </div>
        <hr class="border-light" />
        <div class="text-center small">
            &copy; 2025 RestudyStore – Website học tập đa dịch vụ | Designed by Bạn
        </div>
    </div>
</footer>

<!-- JS: xử lý modal đăng xuất -->
<script>
    const logoutLink = document.getElementById("logoutLink");
    const logoutModal = document.getElementById("logoutModal");
    const cancelLogout = document.getElementById("cancelLogout");

    logoutLink?.addEventListener("click", function (e) {
        e.preventDefault();
        logoutModal?.classList.add("active");
    });

    cancelLogout?.addEventListener("click", function () {
        logoutModal?.classList.remove("active");
    });

    logoutModal?.addEventListener("click", function (e) {
        if (e.target === logoutModal) {
            logoutModal.classList.remove("active");
        }
    });
</script>

@RenderSection("Scripts", required: false)

</body>
</html>
