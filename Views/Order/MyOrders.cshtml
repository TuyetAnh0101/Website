@model IEnumerable<SportsStore.Models.Order>
@using SportsStore.Models
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "_ProfileLayout";

    var currentStatus = Context.Request.Query["status"];
}

<div class="container-fluid">
    <h4 class="text-success mb-4">
        <i class="fa fa-box me-2"></i>Đơn hàng của tôi
    </h4>

    <!-- Tabs trạng thái đơn hàng -->
    <ul class="nav nav-pills mb-4 gap-2 flex-wrap">
        @foreach (OrderStatus status in Enum.GetValues(typeof(OrderStatus)))
        {
            var isActive = currentStatus == status.ToString();
            <li class="nav-item">
                <a class="nav-link fw-semibold px-4 py-2 border 
                          @(isActive ? "active text-white bg-primary" : "text-dark bg-light")"
                   href="@Url.Action("MyOrders", new { status = status })"
                   style="border-radius: 30px; transition: all 0.3s ease;">
                    @GetStatusText(status)
                </a>
            </li>
        }
    </ul>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có đơn hàng nào ở trạng thái này.</div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <div>
                        <div><strong>Mã đơn:</strong> #@order.OrderID</div>
                        <div><strong>Ngày đặt:</strong> @order.OrderDate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-@GetBadgeColor(order.Status)">
                            @GetStatusText(order.Status)
                        </span>
                        <div class="mt-2">
                            <a href="@Url.Action("Details", "Order", new { id = order.OrderID })"
                               class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-eye me-1"></i>Chi tiết
                            </a>

                            <!-- Nút hành động tùy trạng thái -->
                            @if (order.Status == OrderStatus.ChoXacNhan)
                            {
                                <form asp-action="Cancel" asp-controller="Order" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@order.OrderID" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger ms-2"
                                            onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')">
                                        <i class="fa fa-times me-1"></i>Hủy đơn
                                    </button>
                                </form>
                            }
                            else if (order.Status == OrderStatus.DangVanChuyen)
                            {
                                <form asp-action="UpdateStatus" asp-controller="Order" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@order.OrderID" />
                                    <input type="hidden" name="newStatus" value="DaNhanHang" />
                                    <button type="submit" class="btn btn-sm btn-success ms-2"
                                            onclick="return confirm('Bạn đã nhận được hàng?')">
                                        <i class="fa fa-check me-1"></i>Đã nhận hàng
                                    </button>
                                </form>
                            }
                            else if (order.Status == OrderStatus.DaNhanHang)
                            {
                                <form asp-action="UpdateStatus" asp-controller="Order" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@order.OrderID" />
                                    <input type="hidden" name="newStatus" value="YeuCauHoanTien" />
                                    <button type="submit" class="btn btn-sm btn-warning ms-2"
                                            onclick="return confirm('Bạn muốn yêu cầu hoàn tiền?')">
                                        <i class="fa fa-undo me-1"></i>Yêu cầu hoàn tiền
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    @foreach (var line in order.Lines)
                    {
                        <div class="d-flex align-items-center mb-3 border-bottom pb-2">
                            <img src="@line.Product.Image" alt="@line.Product.Name"
                                 class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                            <div class="ms-3 flex-grow-1">
                                <h6 class="mb-1">@line.Product.Name</h6>
                                <small class="text-muted">Số lượng: @line.Quantity</small>
                            </div>
                            <div class="text-end fw-bold text-success">
                                @string.Format("{0:N0} đ", line.Product.Price * line.Quantity)
                            </div>
                        </div>
                    }

                    <div class="text-end mt-3">
                        <strong>Tổng tiền:</strong>
                        <span class="text-danger fw-bold ms-2">
                            @string.Format("{0:N0} đ", order.Lines.Sum(l => l.Product.Price * l.Quantity))
                        </span>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .nav-pills .nav-link:hover {
        background-color: #0d6efd !important;
        color: #fff !important;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
</style>

@functions {
    string GetStatusText(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.ChoXacNhan => "Chờ xác nhận",
            OrderStatus.ChoGiaoHang => "Chờ giao hàng",
            OrderStatus.DangVanChuyen => "Đang vận chuyển",
            OrderStatus.DaNhanHang => "Đã nhận hàng",
            OrderStatus.DaHuy => "Đã hủy",
            OrderStatus.YeuCauHoanTien => "Yêu cầu hoàn tiền",
            OrderStatus.HoanTienThanhCong => "Hoàn tiền thành công",
            _ => status.ToString()
        };
    }

    string GetBadgeColor(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.ChoXacNhan => "secondary",
            OrderStatus.ChoGiaoHang => "info",
            OrderStatus.DangVanChuyen => "warning",
            OrderStatus.DaNhanHang => "success",
            OrderStatus.DaHuy => "danger",
            OrderStatus.YeuCauHoanTien => "warning",
            OrderStatus.HoanTienThanhCong => "success",
            _ => "secondary"
        };
    }
}
