@model SportsStore.Models.ProductReview

@{
    ViewData["Title"] = "Đánh giá sản phẩm";
}

<h2 class="mb-4">
    Đánh giá sản phẩm: <span class="text-primary">@ViewBag.ProductName</span>
</h2>

<form asp-action="Add" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductID" />
    <!-- Rating -->
    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Số sao</label>
        <select asp-for="Rating" class="form-select" required>
    <option value="">-- Chọn số sao --</option>
    @for (int i = 1; i <= 5; i++)
    {
        <option value="@i">@i sao</option>
    }
</select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Review Text -->
    <div class="mb-3">
        <label asp-for="ReviewText" class="form-label">Nhận xét</label>
        <textarea asp-for="ReviewText" class="form-control" rows="4" placeholder="Hãy chia sẻ cảm nhận của bạn..." required></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-success">
        <i class="bi bi-send"></i> Gửi đánh giá
    </button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
