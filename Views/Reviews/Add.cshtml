@model SportsStore.Models.ProductReview

@{
    ViewData["Title"] = "Viết đánh giá";
}

<h2>Đánh giá sản phẩm: @ViewBag.ProductName</h2>

<form asp-action="Add" asp-controller="Reviews" method="post">
    <div class="form-group">
        <label asp-for="Rating">Đánh giá (sao)</label>
        <select asp-for="Rating" class="form-control" asp-validation-for="Rating">
            <option value="">-- Chọn số sao --</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i sao</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment">Bình luận</label>
        <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

       <input type="hidden" asp-for="ProductID" />
    <input type="hidden" asp-for="UserId" />   
    <input type="hidden" asp-for="CustomerName" />

    <button type="submit" class="btn btn-primary mt-3">Gửi đánh giá</button>
    <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.ProductID" class="btn btn-secondary mt-3">Hủy</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
