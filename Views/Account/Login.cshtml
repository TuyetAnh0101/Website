@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - RestudyStore</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #0d6efd, #1e8141);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .login-card {
            background-color: #fff;
            padding: 40px 30px;
            border-radius: 16px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
            animation: fadeIn 0.8s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .icon-user {
            font-size: 56px;
            color: #0d6efd;
            margin-bottom: 10px;
        }

        h3 {
            font-weight: 700;
            color: #222;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        .form-group {
            position: relative;
        }

        .form-control {
            border-radius: 12px;
            padding-left: 45px;
            height: 45px;
            box-shadow: none;
        }

        .form-icon {
            position: absolute;
            top: 10px;
            left: 15px;
            font-size: 18px;
            color: #6c757d;
        }

        .btn-login {
            background: linear-gradient(90deg, #0d6efd, #1e8141);
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            color: #fff;
            transition: all 0.3s;
            font-size: 16px;
        }

        .btn-login:hover {
            opacity: 0.9;
        }

        .text-danger {
            font-size: 13px;
            margin-bottom: 6px;
        }

        .forgot-link,
        .register-link {
            display: block;
            margin-top: 16px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s;
        }

        .forgot-link {
            color: #0d6efd;
        }

        .register-link {
            color: #1e8141;
        }

        .forgot-link:hover {
            color: #084298;
        }

        .register-link:hover {
            color: #155d34;
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <div class="icon-user mb-2">
            <i class="fas fa-user-shield"></i>
        </div>
        <h3>Đăng Nhập</h3>

        <div class="text-danger mb-2" asp-validation-summary="All"></div>

        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group mb-3">
                <span class="form-icon"><i class="fas fa-user"></i></span>
                <input asp-for="Name" class="form-control" placeholder="Tên đăng nhập" />
                <div asp-validation-for="Name" class="text-danger"></div>
            </div>

            <div class="form-group mb-3">
                <span class="form-icon"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                <div asp-validation-for="Password" class="text-danger"></div>
            </div>

            <button type="submit" class="btn btn-login w-100">ĐĂNG NHẬP</button>
        </form>

        <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-link"><i class="fas fa-question-circle me-1"></i>Quên mật khẩu?</a>
        <a href="/Account/Register" class="register-link"><i class="fas fa-user-plus me-1"></i>Chưa có tài khoản? Đăng ký ngay</a>
    </div>
</body>
</html>
