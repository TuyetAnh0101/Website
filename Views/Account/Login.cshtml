@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - RestudyStore</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f8f8;
            font-family: 'Segoe UI', sans-serif;
        }
        .login-card {
            max-width: 400px;
            margin: 100px auto;
            background: white;
            border-radius: 16px;
            padding: 40px 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .login-card .icon-user {
            font-size: 48px;
            color: #333;
            margin-bottom: 10px;
        }
        .login-card h3 {
            font-weight: bold;
            margin-bottom: 30px;
            color: #333;
            letter-spacing: 1px;
        }
        .form-control {
            border-radius: 10px;
            padding-left: 40px;
        }
        .form-group {
            position: relative;
        }
        .form-group .form-icon {
            position: absolute;
            top: 10px;
            left: 12px;
            color: #888;
            font-size: 16px;
        }
        .btn-login {
            background-color: #0d6efd;
            color: white;
            font-weight: 600;
            border-radius: 10px;
            padding: 10px;
            font-size: 16px;
            margin-top: 10px;
        }
        .btn-login:hover {
            background-color: #0b5ed7;
        }
        .forgot-link, .register-link {
            display: block;
            margin-top: 15px;
            font-size: 14px;
            color: #555;
            text-decoration: none;
        }
        .text-danger {
            font-size: 14px;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="icon-user">
            <i class="fas fa-user-circle"></i>
        </div>
        <h3>LOGIN</h3>

        <div class="text-danger mb-2" asp-validation-summary="All"></div>

        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group mb-3">
                <span class="form-icon"><i class="fas fa-user"></i></span>
                <input asp-for="Name" class="form-control" placeholder="Username" />
                <div asp-validation-for="Name" class="text-danger"></div>
            </div>

            <div class="form-group mb-3">
                <span class="form-icon"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <div asp-validation-for="Password" class="text-danger"></div>
            </div>

            <button type="submit" class="btn btn-login w-100">LOG IN</button>
        </form>

      <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-link">Forgot password?</a>
        <a href="/Account/Register" class="register-link">Chưa có tài khoản? Đăng ký ngay</a>
    </div>
</body>
</html>
