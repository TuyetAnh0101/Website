@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký - RestudyStore</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #0d6efd, #1e8141);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .register-card {
            background-color: #fff;
            padding: 45px 35px;
            border-radius: 18px;
            width: 100%;
            max-width: 460px;
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.3);
            animation: fadeIn 0.8s ease;
            text-align: center;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .icon-user {
            font-size: 64px;
            color: #1e8141;
            margin-bottom: 12px;
        }

        h3 {
            font-weight: 800;
            color: #222;
            margin-bottom: 25px;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .form-group {
            position: relative;
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 12px;
            padding-left: 45px;
            height: 48px;
            font-size: 15px;
        }

        .form-icon {
            position: absolute;
            top: 11px;
            left: 15px;
            font-size: 17px;
            color: #6c757d;
        }

        .btn-register {
            background: linear-gradient(90deg, #0d6efd, #1e8141);
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 700;
            color: #fff;
            font-size: 17px;
            text-transform: uppercase;
            width: 100%;
            margin-top: 10px;
        }

        .btn-register:hover {
            opacity: 0.95;
        }

        .text-danger {
            font-size: 13px;
            text-align: left;
        }

        .social-btn {
            font-weight: 600;
        }

        .forgot-link {
            display: block;
            margin-top: 20px;
            font-size: 15px;
            color: #1e8141;
            text-decoration: underline;
            font-weight: 500;
        }

        .forgot-link:hover {
            color: #0d6efd;
        }
    </style>
</head>
<body>
    <div class="register-card">
        <div class="icon-user">
            <i class="fas fa-user-plus"></i>
        </div>
        <h3>Đăng ký tài khoản</h3>

        <div class="text-danger mb-3" asp-validation-summary="All"></div>

        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="form-group">
                <span class="form-icon"><i class="fas fa-user"></i></span>
                <input asp-for="Name" class="form-control" placeholder="Tên đăng nhập" />
                <div asp-validation-for="Name" class="text-danger"></div>
            </div>

            <div class="form-group">
                <span class="form-icon"><i class="fas fa-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <div asp-validation-for="Email" class="text-danger"></div>
            </div>

            <div class="form-group">
                <span class="form-icon"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                <div asp-validation-for="Password" class="text-danger"></div>
            </div>

            <div class="form-group">
                <span class="form-icon"><i class="fas fa-lock"></i></span>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" />
                <div asp-validation-for="ConfirmPassword" class="text-danger"></div>
            </div>

            <button type="submit" class="btn btn-register">ĐĂNG KÝ</button>
        </form>

        <div class="mt-3 mb-2">
            <small>hoặc đăng ký bằng</small>
        </div>

        <!-- Facebook -->
        <form asp-controller="Account" asp-action="ExternalLogin" method="post">
            <input type="hidden" name="provider" value="Facebook" />
            <input type="hidden" name="returnUrl" value="/" />
            <button type="submit" class="btn btn-primary w-100 mb-2 social-btn">
                <i class="fab fa-facebook-f me-1"></i> Đăng ký bằng Facebook
            </button>
        </form>

        <!-- Google -->
        <form asp-controller="Account" asp-action="ExternalLogin" method="post">
            <input type="hidden" name="provider" value="Google" />
            <input type="hidden" name="returnUrl" value="/" />
            <button type="submit" class="btn btn-danger w-100 mb-2 social-btn">
                <i class="fab fa-google me-1"></i> Đăng ký bằng Google
            </button>
        </form>

        <a asp-action="Login" asp-controller="Account" class="forgot-link">Đã có tài khoản? Đăng nhập</a>
    </div>
</body>
</html>
