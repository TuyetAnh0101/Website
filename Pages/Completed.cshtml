@page

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .thank-you-card {
        max-width: 500px;
        margin: 80px auto;
        background: white;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    .check-icon {
        font-size: 60px;
        color: #1e8141;
        margin-bottom: 20px;
    }

    .thank-title {
        font-size: 28px;
        font-weight: bold;
        color: #1e8141;
        margin-bottom: 10px;
    }

    .thank-subtext {
        font-size: 16px;
        color: #555;
        margin-bottom: 30px;
    }

    .btn-continue {
        background-color: #1e8141;
        color: white;
        font-weight: 500;
        font-size: 16px;
        border-radius: 8px;
        padding: 10px 20px;
        text-transform: uppercase;
    }

    .btn-continue:hover {
        background-color: #166b36;
        color: white;
    }
</style>

<div class="thank-you-card">
    <div class="check-icon">
        <i class="fas fa-check-circle"></i>
    </div>

    <div class="thank-title">Cảm ơn bạn!</div>

    <div class="thank-subtext">
        Đơn hàng của bạn đã được đặt thành công.
    </div>

    <a class="btn btn-continue" asp-controller="Home" asp-action="Index">Tiếp tục mua sắm</a>
</div>
