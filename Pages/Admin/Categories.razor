@page "/admin/categories"
@layout AdminLayout
@using SportsStore.Models
@inject StoreDbContext Context
@inject NavigationManager NavManager

<h4 class="mb-4"><i class="fas fa-tags me-2"></i>Quản lý danh mục</h4>

<button class="btn btn-success mb-3" @onclick="CreateCategory">
    <i class="fas fa-plus me-1"></i> Thêm danh mục
</button>

@if (categories.Count == 0)
{
    <div class="alert alert-warning">Hiện chưa có danh mục nào.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-success">
            <tr>
                <th style="width: 60px;">ID</th>
                <th>Tên danh mục</th>
                <th style="width: 120px;">Cho thuê</th>
                <th style="width: 140px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>
                        <span class="badge @(category.AllowRent ? "bg-success" : "bg-secondary")">
                            @(category.AllowRent ? "Có" : "Không")
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-primary me-1" title="Sửa" @onclick="() => EditCategory(category.CategoryId)">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-danger" title="Xóa" @onclick="() => ConfirmDelete(category.CategoryId, category.Name)">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (confirmDeleteId.HasValue)
{
    <div class="alert alert-danger mt-3">
        Bạn có chắc muốn xóa danh mục <strong>@confirmDeleteName</strong> không?
        <div class="mt-2">
            <button class="btn btn-sm btn-danger me-2" @onclick="DeleteConfirmed">
                <i class="fas fa-check"></i> Đồng ý
            </button>
            <button class="btn btn-sm btn-secondary" @onclick="CancelDelete">
                <i class="fas fa-times"></i> Hủy
            </button>
        </div>
    </div>
}

@code {
    private List<Category> categories = new();
    private int? confirmDeleteId = null;
    private string confirmDeleteName = string.Empty;

    protected override void OnInitialized()
    {
        LoadCategories();
    }

    void LoadCategories()
    {
        categories = Context.Categories.OrderBy(c => c.CategoryId).ToList();
    }

void CreateCategory()
{
    NavManager.NavigateTo("/admin/categories/editcategory"); 
}

void EditCategory(int id)
{
    NavManager.NavigateTo($"/admin/categories/editcategory/{id}"); 
}


    void ConfirmDelete(int id, string name)
    {
        confirmDeleteId = id;
        confirmDeleteName = name;
    }

    void CancelDelete()
    {
        confirmDeleteId = null;
        confirmDeleteName = string.Empty;
    }

    void DeleteConfirmed()
    {
        if (confirmDeleteId.HasValue)
        {
            var item = Context.Categories.FirstOrDefault(c => c.CategoryId == confirmDeleteId.Value);
            if (item != null)
            {
                Context.Categories.Remove(item);
                Context.SaveChanges();
                LoadCategories();
            }
        }
        CancelDelete();
    }
}
