@inherits LayoutComponentBase

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f9f9f9;
    }

    .admin-sidebar {
        background-color: #1e8141;
        color: white;
        min-height: 100vh;
        padding: 20px 10px;
    }

    .admin-sidebar h5 {
        font-weight: bold;
        margin-bottom: 30px;
    }

    .admin-sidebar a {
        color: white;
        margin-bottom: 12px;
        border-radius: 6px;
    }

    .admin-sidebar a.active {
        background-color: #ffffff33;
        font-weight: bold;
    }

    .admin-header {
        background-color: #1e8141;
        color: white;
        padding: 16px;
    }

    .admin-header .logout {
        background-color: #ffffff33;
        color: white;
        font-size: 14px;
        padding: 6px 14px;
        border-radius: 6px;
        text-decoration: none;
    }

    .admin-header .logout:hover {
        background-color: #ffffff55;
        color: #fff;
    }

    .admin-content {
        padding: 30px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 admin-sidebar">
            <h5>Restudy Store</h5>
            <NavLink class="btn btn-link d-block text-start" href="/admin/products" Match="NavLinkMatch.Prefix">
                <i class="fas fa-box me-2"></i> Quản lý sản phẩm
            </NavLink>
            <NavLink class="btn btn-link d-block text-start" href="/admin/tutors" Match="NavLinkMatch.Prefix">
                <i class="fas fa-user-graduate me-2"></i> Gia sư
            </NavLink>

            <NavLink class="btn btn-link d-block text-start" href="/admin/categories" Match="NavLinkMatch.Prefix">
                <i class="fas fa-list me-2"></i> Danh mục
            </NavLink>
            <NavLink class="btn btn-link d-block text-start" href="/admin/orders" Match="NavLinkMatch.Prefix">
                <i class="fas fa-receipt me-2"></i> Đơn hàng
            </NavLink>
            <NavLink class="btn btn-link d-block text-start" href="/admin/tutorbookings" Match="NavLinkMatch.Prefix">
                <i class="fas fa-chalkboard-teacher me-2"></i> Thuê gia sư
            </NavLink>
            <NavLink class="btn btn-link d-block text-start" href="/admin/users" Match="NavLinkMatch.Prefix">
                <i class="fas fa-users me-2"></i> Người dùng
            </NavLink>
            <NavLink class="btn btn-link d-block text-start" href="/admin/stats" Match="NavLinkMatch.Prefix">
                <i class="fas fa-chart-bar me-2"></i> Thống kê
            </NavLink>
        </div>

        <!-- Content -->
        <div class="col-md-10">
            <div class="admin-header d-flex justify-content-between align-items-center">
                <span class="fs-5 fw-bold">BẢNG ĐIỀU KHIỂN ADMIN</span>
                <a href="/Account/LogoutConfirm" class="btn btn-outline-danger mt-3 ms-2"><i class="fa fa-sign-out-alt me-1"></i>Đăng xuất</a>
            </div>

            <div class="admin-content">
                @Body
            </div>
        </div>
    </div>
</div>
